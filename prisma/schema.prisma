// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(USER)
}

model Label {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  title     String
  Task      Task[]
}

model Task {
  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  title       String
  description String
  priority    Priority
  termination DateTime?
  status      Status
  label       Label?    @relation(fields: [labelId], references: [id])
  labelId     Int?
}

model Product {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  title       String
  description String
  stock       Stock
  discount    Decimal?
  price       Decimal
  image       String?
  category    String
}

enum Role {
  USER
  ADMIN
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

enum Status {
  TODO
  INPROGRESS
  DONE
  CANCELED
  BACKLOG
}

enum Stock {
  ONSTOCK
  LOWSTOCK
  NOSTOCK
}
